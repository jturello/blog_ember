<li>
  {{destination.location}} - {{destination.description}}
  {{#if isImageShowing}}
    <p><img src={{destination.image}} alt={{destination.location}} {{action 'imageHide'}}></p>
  {{else}}
    <button {{action 'imageShow'}}>Show Image</button>
  {{/if}}
    <button {{action 'delete' destination}}>Delete</button>
</li>
