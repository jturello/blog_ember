<li>
  {{#link-to 'destination' destination.id}}{{destination.location}} - {{destination.description}}{{/link-to}}
  {{#if isImageShowing}}
    <p><img src={{destination.image}} alt={{destination.location}} {{action 'imageHide'}}></p>
  {{else}}
    <button {{action 'imageShow'}}>Show Image</button>
  {{/if}}
</li>
